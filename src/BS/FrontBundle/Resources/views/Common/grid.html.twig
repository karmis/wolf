{% if entities is not defined %}
    {% set entities = [] %}
{% endif %}

{% if entities|length > 0 %}
    <!-- grid -->
    <section class="grid row clearfix clearfix-for-2cols">

        {% for entity in entities %}

            <!-- grid item -->
            <div class="grid-item col-md-6">
                <div class="item-content clearfix">
                    <img src="{{ asset(pRes~"/images/bg/bg4.jpg") }}" alt="" width="350"/>

                    <div class="text-content">
                        {% autoescape true %}
                        <h5>
                            {{ entity.caption|truncate(100) }}
                        </h5>
                        <p>
                            {% if entity.smallContent|length > 0 %}
                                {{ entity.smallContent|truncate(350) }}
                            {% else %}
                                {{ entity.content|striptags|truncate(350) }}
                            {% endif %}
                        </p>

                        <p>
                            <a href=""
                               onclick="populate_and_open_modal(event, 'modal-blog-event-{{ entity.id }}');"
                               class="btn btn-outline-inverse btn-sm">
                                Подробнее...</a>
                        </p>

                        <div class="content-to-populate-in-modal" id="modal-blog-event-{{ entity.id }}">
                            <h1>{{ entity.caption }}</h1>

                            {{ entity.content|raw }}
                        </div>
                        <!-- #modal-content-1 -->

                        {% endautoescape %}
                    </div>
                </div>
                <!-- end: .item-content -->
            </div>
            <!-- end: .grid-item -->
        {% endfor %}
    </section>
{% else %}
    {% include 'BSFrontBundle::Common/alert.html.twig' with {
    alertType:'normal',
    alertMsg:'В блоге еще нет ни одной записи'
    } %}
{% endif %}